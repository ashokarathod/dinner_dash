          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% if logged_in? %>
              <a <%= link_to "Create Order", new_order_url, class: "dropdown-item" %></a>
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to 'View Order', orders_path, class: 'dropdown-item' %>
