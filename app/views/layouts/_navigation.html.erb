          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <% if logged_in? %>
              <a <%= link_to "Create Recipe", new_item_url, class: "dropdown-item" %></a>
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to 'View Recipe', items_path, class: 'dropdown-item' %>
