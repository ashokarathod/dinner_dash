<% @orders.each do |order| %>
  <div id= 'page-content'>
    <div class= 'row justify-content-md-center'>
      <div class= 'col-4 mt-4'>
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
           <h5 class="card-title"><%= link_to "Transaction id: #{order.transaction_id}", order_path(order), class: 'text-success' %></h5>
            <p class="card-text"><%= order.status%></p>
            <a><%= link_to "View", order_path(order), class: "btn btn-outline-success" %></a>
            <% if logged_in? && current_user.admin? %>
              <a> <%= link_to "Edit", order_path(order),class: "btn btn-outline-info"%></a>
              <a> <%= link_to 'Delete', order_path(order), method: :delete, data: { confirm: "are you sure?"}, class: "btn btn-outline-danger" %></a>
            <% end %>
          </div>
        </div>
      </div>
  </div>
<% end %>