<% @orders.each do |order| %>
  <div id= 'page-content'>
    <div class= 'row justify-content-md-center'>
      <div class= 'col-4 mt-4'>
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
           <h5 class="card-title"><%= link_to "Transaction id: #{order.transaction_id}", order_path(order), class: 'text-success' %></h5>
            <a class="card-text"><%= "Status: #{order.status}"%></a>
          </div>
        </div>
      </div>
  </div>
<% end %>