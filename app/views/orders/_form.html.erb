<div class= 'container'>
  <div class= 'row justify-content-center'>
    <div class= 'col-12'>
      <%= render "shared/errors", obj: @order%>
      <%= form_with(model: @order, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
        <div class= 'form-group row'>
          <%= f.label :status, class: 'col-2 col-form-label text-light '%> 
          <div class= 'col-10'>
            <%= f.text_field :status, class: 'form-control', placeholder: "Enter the status of the order"%>
          </div>
        </div>
        <div class= 'form-group row'>
          <%= f.label :transaction_id, class: 'col-2 col-form-label text-light' %>
          <div class= 'col-10'>
            <%= f.text_field :transaction_id, rows: 10, class: 'form-control', placeholder: "Enter the transaction id"%>
          </div>
        </div>
        <div class= 'form-group row'>
          <%= f.label :users, class: 'col-2 col-form-label text-light' %>
          <div class= 'col-10'>
            <%= f.collection_select :user_id, User.order(:name),:id,:name, include_blank: true %>
          </div>
        </div>
        <div class= "form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
    <%= link_to 'back to Orders', orders_path, class: 'text-info'%></p>
  </div>
</div>